module BCD_add2(input [3:0]bcdAones,input [3:0]bcdAtens,
					input [3:0]bcdBones,input [3:0]bcdBtens, output [3:0] hundreds, output [3:0] tens,output [3:0]ones);

wire[3:0] T0;
wire[3:0] Z0;
wire[3:0] C1;
wire[3:0] T1;
wire[3:0] Z1;
wire[3:0] C2;
always @ (bcdAones,bcdBones)
begin
T0<=bcdAones+bcdBones
	if(T0>9)
	begin
		Z0<=10;
		c1<=1;

	end
	else
	begin
	   Z0<=0;
		c1<=0;
	end
ones<=T0-Z0;

end	
always @ (bcdAtens,bcdBtens)
begin
T1<=bcdAones+bcdBones+C1
	if(T1>9)
	begin
		Z1<=10;
		c2<=1;

	end
	else
	begin
	   Z1<=0;
		c2<=0;
	end
tens<=T1-Z1;
hundreds=c2;
end	
						



						
endmodule 